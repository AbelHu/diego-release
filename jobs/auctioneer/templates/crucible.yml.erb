---
run:
  path: "/var/vcap/packages/auctioneer/bin/auctioneer"
  args:
    - "--config"
    - "/var/vcap/jobs/auctioneer/config/auctioneer.json"
  env:
  - "GODEBUG=netdns=cgo"

lifecycle:
  show_stacks_on_stall: true

limits:
  open_files: 100000

sysctl:
  net.ipv4.tcp_fin_timeout: 10
  net.ipv4.tcp_tw_reuse: 1
