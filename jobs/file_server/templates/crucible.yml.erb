---
run:
  path: "/var/vcap/packages/file_server/bin/file-server"
  args:
    - "--config"
    - "/var/vcap/jobs/file_server/config/file_server.json"
  env:
  - "GODEBUG=netdns=cgo"

lifecycle:
  show_stacks_on_stall: true

limits:
  open_files: 100000

sysctl:
  net.ipv4.tcp_fin_timeout: 10
  net.ipv4.tcp_tw_reuse: 1
