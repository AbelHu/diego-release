---
run:
  path: "/var/vcap/packages/locket/bin/locket"
  args:
    - "--config"
    - "/var/vcap/jobs/locket/config/locket.json"
  env:
  - "GODEBUG=netdns=cgo"

lifecycle:
  show_stacks_on_stall: true

limits:
  open_files: 100000

sysctl:
  net.ipv4.tcp_fin_timeout: 10
  net.ipv4.tcp_tw_reuse: 1
