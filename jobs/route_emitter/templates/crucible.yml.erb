---
run:
  path: "/var/vcap/packages/route_emitter/bin/route-emitter"
  args:
    - "--config"
    - "/var/vcap/jobs/route_emitter/config/route_emitter.json"
  env:
  - "GODEBUG=netdns=cgo"

lifecycle:
  show_stacks_on_stall: true

limits:
  open_files: 100000

sysctl:
  net.ipv4.tcp_fin_timeout: 10
  net.ipv4.tcp_tw_reuse: 1
