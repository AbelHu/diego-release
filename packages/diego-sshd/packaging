set -e

mkdir -p ${BOSH_INSTALL_TARGET}/src
cp -a . ${BOSH_INSTALL_TARGET}/src
export GOPATH=$BOSH_INSTALL_TARGET

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH

go build -a -installsuffix static --ldflags '-extldflags "-static"' code.cloudfoundry.org/diego-ssh/cmd/sshd

ldd sshd && echo 'diego-sshd must be statically linked' && false

mv sshd diego-sshd

tar -czf ${BOSH_INSTALL_TARGET}/diego-sshd.tgz diego-sshd

# clean up source artifacts
rm -rf ${BOSH_INSTALL_TARGET}/src ${BOSH_INSTALL_TARGET}/pkg
